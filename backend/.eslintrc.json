{
    "extends": [
      "airbnb-base",
      "prettier"
    ],
    "plugins": ["prettier"],
    "env": {
      "node": true,
      "es2022": true,
      "jest": true
    },
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module"
    },
    "rules": {
      "prettier/prettier": "error",
      "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
      "no-console": ["warn", { "allow": ["warn", "error"] }],
      "prefer-const": "error",
      "no-underscore-dangle": "off",
      "class-methods-use-this": "off",
      "no-param-reassign": ["error", { "props": false }]
    }
  }